/*底部弹窗开始 -使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 2000;
    color: #fff;
  }
  /*对话框 */
  .commodity_attr_box {
    height: 280rpx;
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 0rpx;
  }
  .loadingIcon{
    display: block;
    width: 100%;
    height: 100%;
    vertical-align: middle;
  }